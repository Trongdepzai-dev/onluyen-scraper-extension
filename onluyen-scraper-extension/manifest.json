{
  "manifest_version": 3,
  "name": "OnLuyen Auto Scraper",
  "version": "3.6.2",
  "description": "Tool tự động lấy câu hỏi Bài tập & Bài thi từ OnLuyen.vn make by B.Trọng",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.onluyen.vn/*",
    "https://scintillating-kangaroo-6a27a8.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Chạy Scraper (Ctrl+Shift+S)",
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "commands": {
    "run-scraper": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Chạy Auto Scraper"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Kích hoạt extension"
    }
  }
}
